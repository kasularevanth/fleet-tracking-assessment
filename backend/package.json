{
  "name": "fleet-tracking-backend",
  "version": "1.0.0",
  "description": "Backend API for Fleet Tracking Dashboard",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "fleet",
    "tracking",
    "dashboard",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "otp-generator": "^4.0.1",
    "nodemailer": "^6.9.7",
    "google-auth-library": "^9.4.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run copy-schema",
    "copy-schema": "node -e \"const fs=require('fs');const path=require('path');const src=path.join(__dirname,'src/database/schema.sql');const dest=path.join(__dirname,'dist/database/schema.sql');fs.mkdirSync(path.dirname(dest),{recursive:true});fs.copyFileSync(src,dest);\"",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "migrate": "tsx src/database/migrate.ts"
  }
}
